/*
 * This is a manifest file that'll automatically include all the stylesheets available in this directory
 * and any sub-directories. You're free to add application-wide styles to this file and they'll appear at
 * the top of the compiled file, but it's generally better to create a new file per style scope.
 *= require_self
 *= require_tree . 
*/

/* Variables */
$textColor: #333333;
$linkColor: #000000;
$defaultBorderColor: #DDDDDD;
$lighterBorderColor: #EEEEEE;
$defaultBoxBg: #F2F2F2;
$shadowColor: #A2C0DF;

/* Basic */
body {
  color: $textColor;
  font-size: 100%;
  margin: 0;
  background: white url(<%= asset_path 'html-bg.png' %>) repeat-x;
}
body, input, select, button {
  font-family: 'Ubuntu', 'Helvetica', sans-serif;
}

body a, body a:visited, body a:active {
	color: $linkColor;
}
a:hover {
	text-decoration: none;
}

h1, h2, h3 {
	text-shadow: 1px 1px 0px white;
}
h1 {
	font-size: 2.25em;
}
h2 {
	font-size: 1.75em;
}
h3 {
	font-size: 1.25em;
	border-bottom: 1px dotted #CCC;
	padding-bottom: 0.2em;
}

/* Headers */
header {
	margin: 1.5% 2.5%;
}
header h1 {
  background: url(<%= asset_path 'logouni48.png' %>) no-repeat 0 0;
  padding: 0;
  min-height: 50px;
  position: relative;
  margin: 0; 
}
header h1 a {
	text-decoration: none;
	color: $linkColor;
	text-indent: -9999px;
	display: block;
}
header h1 span {
  margin-left: 97px;
  font-size: small;
  font-weight: normal;
  display: block;
  position: absolute;
  bottom: 0em;
}
header {
	position: relative;
}
header section {
	position: absolute;
	top: 0;
	right: 0;
}
header #user .details {
	float: left;
	line-height: 27px;
	text-align: right;
}
header #user .photo {
	margin-left: 1em;
	float: right;
}

img.thumb {
	border: 3px solid $defaultBoxBg;
	box-shadow: 1px 1px 1px $shadowColor;
}

/* Main Menu */
#main-nav {
  float: left;
  width: 95%;
  margin: 0 2.5%;
  -moz-border-radius: 6px;
  border-radius: 6px;
  -moz-box-shadow: 0 2px 4px #CCC;
  box-shadow: 1px 1px 3px $shadowColor;
  background-color: #575d62;
  background-image: -moz-linear-gradient(top, #575d62, #2c3135); /* FF3.6 */
  background-image: -ms-linear-gradient(top, #575d62, #2c3135); /* IE10 */
  background-image: -o-linear-gradient(top, #575d62, #2c3135); /* Opera 11.10+ */
  background-image: -webkit-gradient(linear, left top, left bottom, from(#575d62), to(#2c3135)); /* Saf4+, Chrome */
  background-image: -webkit-linear-gradient(top, #575d62, #2c3135); /* Chrome 10+, Saf5.1+ */
  background-image: linear-gradient(top, #575d62, #2c3135);
  filter: progid:DXImageTransform.Microsoft.gradient(startColorStr='#575d62', EndColorStr='#2c3135'); /* IE6–IE9 */
}
#main-nav li.active, #main-nav a {
	color: white;
	text-decoration: none;
	text-shadow: 1px 1px 0px #000;
}
#main-nav a:hover {
	text-decoration: underline;
}
#main-nav ul {
  margin: 0;
  padding: 0;
  list-style-type: none;
  position: relative;
  float: left;
  width: 96%;
}
#main-nav ul li {
	float: left;
	padding: 0.5em 1.75em;
	border-right: 1px solid #666;
}

/* Content */
#content {
	float: left;
	width: 95%;
	margin: 1.5% 2.5%;
}
#content h1, #content article h2 {
	border-bottom: 1px solid $defaultBorderColor;
}
#content h1, #content article h2, #content header {
	padding-bottom: 0.2em;
	margin: 0 0 1.5%;
}
#content header {
	position: relative;
	float: left;
	width: 100%;
}
#content header h1, #content header h2 {
  padding: 0;
  margin-bottom: 0;
  background: none;
}
#content article {
	float: left;
	width: 75%;
}
#content aside {
  float: left;
  margin-right: 2.5%;
  width: 22.5%;
  background: $defaultBoxBg;
}
#content aside ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
  border-top: 1px solid $defaultBorderColor;
}
#content aside ul li {
  border-bottom: 1px solid $defaultBorderColor;
  padding: 1em 1.5em 1em 2.5em;
  background: url(<%= asset_path 'icons/bullet_black.png' %>) no-repeat 1em 50%;
}
#content h3 {
	margin-top: 1.5em;
}
#breadcrumbs, #breadcrumbs a {
  color: #666;
  font-size: small;
  text-decoration: none;
}

/* Footer */
footer {
  padding-top: 0.5em;
  border-top: 1px dotted $lighterBorderColor;
  float: left;
  width: 96%;
  margin: 0 2% 2%;
}
footer {
	font-size: small;
}
footer, footer a, footer a:active, a:visited, footer a:link {
	color: #666;
}
#license {
	margin-top: 0.20em;
}

/* Toolbar */
#toolbar {
  float: left;
  list-style-type: none;
  display: block;
  margin: 0;
  padding: 0;
  background: $defaultBoxBg;
  width: 100%;  
  border-bottom: 1px solid $defaultBorderColor;
  clear: both;
}
#toolbar li {
	float: left;
	display: block;
	margin-left: 1.5em;
	padding: 0.5em 0;
}
#toolbar a, #toolbar input, .item input.delete {
  background: none;
  padding: 0;
  margin: 0;
  text-decoration: underline;
  color: $linkColor;
  border: 0;
  text-shadow: none;
  font-size: 1em;
}
#toolbar a:hover, #toolbar input:hover, .item input.delete:hover {
	text-decoration: none;
	cursor: pointer;
}
#toolbar .edit, #toolbar .delete, #toolbar .back, #toolbar .new, #toolbar .show, #toolbar .person, .item input.delete {
  padding-left: 24px;
  background-repeat: no-repeat;
  background-position: 0 50%;
}
#toolbar .new {
	background-image: url(<%= asset_path 'icons/add.png' %>);
}
#toolbar .back {
	background-image: url(<%= asset_path 'icons/back.png' %>);
}
#toolbar .edit {
	background-image: url(<%= asset_path 'icons/edit.png' %>);
}
#toolbar .delete, .item input.delete {
	background-image: url(<%= asset_path 'icons/delete.png' %>);
}
#toolbar .show {
	background-image: url(<%= asset_path 'icons/full_page.png' %>);
}
#toolbar .person {
	background-image: url(<%= asset_path 'icons/user.png' %>);
}

/* Tables */
table {
	border-spacing: 0;
	width: 100%;
	border-collapse: collapse;
}
tbody tr:nth-child(even) {
	background: #FAFAFA;
}
th, td {
	padding: 0.75em 1em;
	text-align: left;
}
thead th {
	font-size: 0.75em;
	text-transform: uppercase;
	padding-left: 1.3em;
}
tbody td {
	border-top: 1px solid $lighterBorderColor;
}
div.pagination {
	margin-top: 0.75em;
}

table.grid tbody td, table.grid thead th {
	border: 1px solid $lighterBorderColor;
}
table.grid tbody td {
	font-size: 0.8em;
}

/* Forms */
input, select, textarea {
	padding: 0.25em 0.5em;
	font-size: 0.9em;
}
button, input[type=submit], input[type=reset] {
	padding: 0.5em 2em;
}

/* Essas classes são do scaffold do Ruby - Depois ajeitamos. */
#notice {
	color: green;
}
.field_with_errors {
  padding: 2px;
  background-color: red;
  display: table;
}
#error_explanation, .errorExplanation {
  padding-bottom: 0;
  margin-bottom: 1.5%;
  background-color: #f0f0f0;
  float: left;
  width: 100%;
}
#content #error_explanation h2, .errorExplanation h2 {
  font-size: 0.8em;
  text-align: left;
  font-weight: bold;
  margin: 0;
  background-color: #c00;
  color: #fff;
  text-shadow: none;
  padding: 0.5em 0.5em 0.5em 1.5em;
}
.errorExplanation p, .errorExplanation ul {
  font-size: 0.8em;
  margin-left: 1.5em;
}
#error_explanation ul li, .errorExplanation ul li {
	list-style: square;
}

/* Login */
article#login, aside#login-splash {
	margin-top: 2%;
	margin-bottom: 1%;
}
article#login {
	width: 48%;
}
article#login h1 {
	width: 16em;
  font-size: 1.5em;
}
aside#login-splash {
  width: 48%;
  text-align: right;
  background: none;
}
#login #username, #login #password {
  background-position: 8px 50%;
  background-repeat: no-repeat;
  padding: 1em 1em 1em 2.75em;
  background-color: #FBFBFB;
  background-position: 1em 50%;
  background-repeat: no-repeat;
  border: 1px solid #E5E5E5;
  width: 23em;
  margin-top: 0.5em;
}

#login #username {
	background-image: url(<%= asset_path 'icons/user.png' %>);
}
#login #password {
	background-image: url(<%= asset_path 'icons/lock.png' %>);
}

/* Page-specific */
aside#user {
	width: 180px;
	height: 240px;
	padding: 5px;
}

/* Text */
.small-relevance, body .small-relevance a {
	color: #999;
}
.approved {
	color:#008000;
}
.failed {
	color:#CC0000;
}
.studying {
	font-style: italic;
}

/* Icons */
#content aside ul li.home {
	background-image: url(<%= asset_path 'icons/home.png' %>);
}
#content aside ul li.group {
	background-image: url(<%= asset_path 'icons/group.png' %>);
}
#content aside ul li.files, .wall a.file {
	background-image: url(<%= asset_path 'icons/upcoming-work.png' %>);
}
#content aside ul li.mail {
	background-image: url(<%= asset_path 'icons/email.png' %>);
}
#content aside ul li.report {
	background-image: url(<%= asset_path 'icons/report.png' %>);
}
#content aside ul li.statistics {
	background-image: url(<%= asset_path 'icons/statistics.png' %>);
}
#content aside ul li.calendar {
	background-image: url(<%= asset_path 'icons/calendar.png' %>);
}
#content aside ul li.details {
	background-image: url(<%= asset_path 'icons/attibutes.png' %>);
}
#content aside ul li.tests {
	background-image: url(<%= asset_path 'icons/issue.png' %>);
}
#content aside ul li.abscences {
	background-image: url(<%= asset_path 'icons/order.png' %>);
}
#content aside ul li.finish {
	background-image: url(<%= asset_path 'icons/check.png' %>);
}

/* Panels */
.panel-left, .panel-right {
	width: 48.25%;
	float: left;
}
.panel-left {
	margin-right: 1.75%;
}
.panel-right {
	margin-left: 1.75%;
}

/* Autocomplete */
.ui-autocomplete-wrapper {
  background-image: url(<%= asset_path 'icons/white/search.png' %>);
  background-position: 12px center;
  background-repeat: no-repeat;
  padding: 0.5em 0.5em 0.5em 36px;  
}
div.ui-autocomplete-loading {
  background-image: url(<%= asset_path 'ajax-loader.gif' %>);
}
.ui-autocomplete-error {
  background-color: #CC0000;
}

/* Wall */
.wall {
	margin-left: 0;
	padding-left: 0;
	list-style-type: none;
}
.wall li {
	position: relative;
	margin-bottom: 2em;
}
.wall .photo {
	position: absolute;
	left: 0;
	top: 0;
	float: left;
	width: 75px;
}
.wall .title {
	background: white url(<%= asset_path 'commentArrow.png' %>) no-repeat 1em 100%;
	padding-bottom: 10px;
	margin-bottom: 0;
}
.wall .item {
	margin-left: 95px;
}
.wall .item .content p {
	margin: 0.5em 0;
}
.wall .item h4 {
	margin: 0 0 0.5em;
}
.wall .content {
	border-radius: 10px;
	padding: 0.75em 1em;
	background: #DDD;
}
.wall .title {
	color: #4C4C4C;
}
.wall a.file {
	padding-left: 1.5em;
	background-repeat: no-repeat;
	background-position: 0 50%;
}
.wall .content form {
	border-top: 1px solid #BBB;
	margin-top: 1em;
	padding-top: 0.5em;
}

/* People Tables */
table.people tbody td {
	border: none;
}
td.photo, th.photo {
	width: 75px;
}
