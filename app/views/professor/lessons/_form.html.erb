<%= form_for([:professor, @lecture, @lesson]) do |f| %>
  <%= f.error_messages %>

	<p>
		<%= f.label :date %><br/>
		<%= f.datetime_select :date %>
	</p>
	
	<p>
		<%= f.label :title %><br/>
		<%= f.text_field :title %>
	</p>
	
	<p>
		<%= f.label :description %><br/>
		<%= f.text_area :description, :rows => 10 %>
	</p>
	
	<p>
		<%= f.label :maximum_absences %><br/>
		<%= f.text_field :maximum_absences, :value => @lesson.maximum_absences ? @lesson.maximum_absences : 0 %><br />
		<small><%= t 'MaximumAbsencesExplanation' %></small>
	</p>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
