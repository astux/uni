<h1><%= @curso.nome %></h1>
<%= render :partial => 'admin/cursos/menu', :locals => { :curso => @curso } %>
<article>
    <h2>Disciplinas</h2>
    
    <table>
      <tr>
        <th>Nome</th>
      </tr>
    
    <% @disciplinas.each do |disciplina| %>
      <tr class="<%= cycle("even", "odd") -%>">
        <td><%= link_to disciplina.nome, [:admin, disciplina] %></td>
      </tr>
    <% end %>
    </table>
    
    <%= will_paginate @disciplinas %>
    
</article>
