<%= form_for([:admin, @professor]) do |f| %>
  <%= f.error_messages %>

  <%= f.fields_for :person do |p| %>
  <p>
    <%= p.label :name, (t 'Name') %><br />
    <%= p.text_field :name %>
  </p>
  <p>
    <%= p.label :email, (t 'Email') %><br />
    <%= p.text_field :email %>
  </p>
  <% end %>
  <p>
    <%= f.label :scholarity_id, (t 'Scholarity') %><br />
    <%= f.select :scholarity_id, Scholarity.all.collect {|it| [it.name, it.id]} %>
  </p>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
