<h1><%= @course.name %></h1>
<%= render :partial => 'admin/courses/menu', :locals => {:course => @course} %>
<article>
  <header>
    <h2><%= t 'Curriculums' %></h2>
    <ul id="toolbar">
      <li><%= link_to ((t 'New') + ' ' + (t 'Curriculum')), {:action => 'new'}, :class => 'new' %></li>
  </header>
  <table>
    <thead>
      <tr>
        <th><%= t 'Code' %></th>
        <th><%= t 'Name' %></th>
        <th><%= t 'Active' %></th>
      </tr>
    </thead>
    <tbody>
      <% @curriculums.each do |curriculum| %>
      <tr>
        <td><%= curriculum.code %></td>
        <td><%= link_to curriculum.name, [:admin, @course, curriculum] %></td>
        <td><%= curriculum.active ? (I18n.t 'BooleanYes') : (I18n.t 'BooleanNo') %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</article>
