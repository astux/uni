<h1><%= @cadeira.curso.nome %></h1>
<%= render :partial => 'admin/cursos/menu', :locals => { :curso => @cadeira.curso } %>
<article>
    <h2><%= @cadeira.nome %></h2>
    <p id="notice"><%= notice %></p>
    
    <p>
      <b>Nome:</b>
      <%= @cadeira.nome %>
    </p>
    
    <p>
      <b>Creditos:</b>
      <%= @cadeira.creditos %>
    </p>
    
    <% if @cadeira.prerequisitos && @cadeira.prerequisitos.length > 0 %>
    <h3>Pr√©-requisitos</h3>
    <ul>
        <% for prerequisito in @cadeira.prerequisitos %>
        <li>
            <%= link_to prerequisito.nome, [:admin, @cadeira.curso, prerequisito] %>
        </li>
        <% end %>
    <% end %>
</ul>
    
    <%= link_to 'Editar', edit_admin_curso_cadeira_path(@cadeira.curso, @cadeira) %> | 
    <%= link_to 'Excluir', [:admin, @cadeira.curso, @cadeira], :confirm => 'Tem certeza disso?', :method => :delete %> | 
    <%= link_to 'Voltar', admin_curso_cadeiras_path(@cadeira.curso) %>
</article>
