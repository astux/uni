<h1><%= t 'Parametros' %></h1>
<%= render :partial => 'menu' %>
<article>
    <h2><%= t 'Sistema' %></h2>
    <p id="notice"><%= notice %></p>
    <%= form_tag( :action => 'update' ) do %>
    <p>
      <%= label_tag (t 'Idioma') %><br />
      <%= select_tag :locale, options_for_select(lang_options_for_select(), I18n.locale) %>
    </p>
    <div class="actions">
      <%= submit_tag %>
    </div>
    <% end %>
    
</article>
