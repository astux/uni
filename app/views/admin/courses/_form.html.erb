<%= form_for([:admin, @course]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label (t 'Code') %><br />
    <%= f.text_field :code %>
  </p>
  <p>
    <%= f.label (t 'Name') %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label (t 'CourseCategory') %><br />
    <%= f.select :course_category_id, CourseCategory.all.collect {|c| [ c.name, c.id ] } %>
  </p>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
