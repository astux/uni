<h1><%= @course.name %></h1>
<%= render :partial => 'menu', :locals => { :course => @course } %>
<article>
  <header>
    <h2><%= t 'Start' %></h2>
    <ul id="toolbar">
      <li><%= link_to (t 'Back'), admin_courses_path, :class => 'back' %></li>
      <li><%= link_to (t 'Edit'), edit_admin_course_path(@course), :class => 'edit' %></li>
      <li><%= button_to (t 'Delete'), [:admin, @course], :confirm => (t 'AreYouSure'), :method => :delete, :class => 'delete' %></li> 
    </ul>
  </header>
  
  <p id="notice"><%= notice %></p>
  
  <p>
    <b><%= t 'Code' %>:</b>
    <%= @course.code %>
  </p>

  <p>
    <b><%= t 'Name' %>:</b>
    <%= @course.name %>
  </p>
  
  <p>
    <b><%= t 'CourseCategory' %>:</b>
    <%= @course.course_category.name %>
  </p>
</article>
