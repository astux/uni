<h1>Aluno</h1>

<p>
  <b>Matr√≠cula:</b>
  <%= @aluno.matricula %>
</p>

<p>
  <b>Nome:</b>
  <%= @aluno.pessoa.nome %>
</p>

<p>
  <b>E-mail:</b>
  <%= @aluno.pessoa.email %>
</p>

<% if @aluno.cursos && @aluno.cursos.length > 0 %>
<h3>Cursos</h3>
<ul>
    <% for curso in @aluno.cursos %>
    <li>
        <%= link_to curso.nome, [:admin, curso] %>
    </li>
    <% end %>
</ul>
<% end %>

<%= link_to (t 'Editar'), edit_admin_aluno_path(@aluno) %> | 
<%= button_to (t 'Excluir'), [:admin, @aluno], :confirm => 'Tem certeza disso?', :method => :delete %> |
<%= link_to (t 'Voltar'), admin_alunos_path %>
