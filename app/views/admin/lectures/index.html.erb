<h1><%= @academic_period.name %></h1>
<%= render :partial => 'admin/academic_periods/menu', :locals => {:academic_period => @academic_period} %>
<article>
  <header>
    <h2><%= t 'Lectures' %></h2>
    <ul id="toolbar">
      <li><%= link_to ((t 'New') + ' ' + (t 'activerecord.models.lecture')), {:action => 'new'}, :class => 'new' %></li>
  </header>
  <table>
    <thead>
      <tr>
        <th><%= t 'activerecord.attributes.lecture.code' %></th>
        <th><%= t 'activerecord.attributes.discipline.name' %></th>
        <th><%= t 'activerecord.attributes.discipline.course_id' %></th>
      </tr>
    </thead>
    <tbody>
      <% @lectures.each do |lecture| %>
      <tr>
        <td><%= lecture.code %></td>
        <td><%= link_to lecture.discipline.name, admin_academic_period_lecture_path(@academic_period, lecture) %></td>
        <td><%= link_to lecture.discipline.course.name, admin_course_path(lecture.discipline.course) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</article>
