<%= render :partial => 'admin/parametros/menu' %>
<article>
  <header>
    <h2>Escolaridades</h2>
    <ul id="toolbar">
      <li><%= link_to 'Nova Escolaridade', new_admin_escolaridade_path, :class => 'new' %></li>
    </ul>
  </header>

  <table>
    <tr>
      <th>Nome</th>
    </tr>
  
    <% @escolaridades.each do |escolaridade| %>
    <tr class="<%= cycle("even", "odd") -%>">
      <td><%= link_to escolaridade.nome, [:admin, escolaridade] %></td>
    </tr>
    <% end %>
  </table>
  
  <%= will_paginate @escolaridades %>
</article>
