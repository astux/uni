<h1><%= @course.name %></h1>
<%= render :partial => 'admin/courses/menu', :locals => {:course => @course} %>
<article>
  <header>
    <h2><%= @curriculum.name %>: <%= @curriculum_discipline.discipline.name %></h2>
    <ul id="toolbar">
      <li><%= link_to (t 'Back'), admin_course_curriculum_path(@course, @curriculum), :class => 'back' %></li>
      <li><%= link_to (t 'Edit'), edit_admin_course_curriculum_curriculum_discipline_path(@course, @curriculum, @curriculum_discipline), :class => 'edit' %></li>
    </ul>
  </header>
  
  <p>
    <b><%= t 'activerecord.attributes.curriculum_discipline.curriculum_id' %>:</b> 
    <%= @curriculum.name %>
  </p>
  
  <p>
    <b><%= t 'activerecord.attributes.curriculum_discipline.module' %>:</b> 
    <%= @curriculum_discipline.module %>
  </p>
  
  <h3><%= t 'activerecord.models.discipline' %></h3>
  
  <p>
    <b><%= t 'activerecord.attributes.discipline.code' %>:</b> 
    <%= @curriculum_discipline.discipline.code %>
  </p>
  
  <p>
    <b><%= t 'activerecord.attributes.discipline.name' %>:</b> 
    <%= @curriculum_discipline.discipline.name %>
  </p>
  
  <p>
    <b><%= t 'activerecord.attributes.discipline.version' %>:</b> 
    <%= @curriculum_discipline.discipline.version_fullname %>
  </p>
</article>
