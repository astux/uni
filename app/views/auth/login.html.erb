<aside id="login-splash">
  <%= image_tag 'splash.png' %>
</aside>
  
<article id="login">
  <h1><%= t 'Welcome' %></h1>
  <% if notice %>
  <p id="notice"><%= t notice %></p>
  <% end %>
  
  <% if alert %>
  <p id="alert"><%= t alert %></p>
  <% end %>
  
  <%= form_tag(authenticate_url) do %>
  <p>
    <%= label_tag :username, (t 'EmailOrStudentId') %><br/>
    <%= text_field_tag :username, nil, :autocomplete => 'off' %>
  </p>
  <p>
    <%= label_tag :password, (t 'Password') %><br/>
    <%= password_field_tag :password %>
  </p>
  <div class="actions">
    <%= submit_tag (t 'LogIn') %>
  </p>
  <p>
    <%= link_to (t 'ForgotYourPassword'), password_recovery_index_url %>
  </p>
  <% end %>
</article>

<script language="JavaScript">
  $(document).ready(function() {
    $('#username').focus()
  })
</script>
