<h2><%= t 'Details' %></h2>
<p>
  <b><%= t 'ClassCode' %>:</b> <%= @lecture.code %>
</p>
<p>
  <b><%= t 'AcademicPeriod' %>:</b> <%= @lecture.academic_period.name %>
</p>
<% if @lecture.lecture_time_slots.exists? %>
<h3><%= t 'TimeTable' %></h3>
  <ul>
    <% for time_slot in @lecture.lecture_time_slots %>
    <li>
      <%= (t 'date.day_names')[time_slot.weekday] %> 
      <%= time_slot.start_time_string %> - <%= time_slot.end_time_string %>
    </li>
    <% end %>
  </ul>
<% end %>

<% if @lecture.professors.size == 1 %>
  <p>
    <b><%= t 'Professor' %>:</b> <%= @lecture.professors[0].person.name %>
  </p>
  <% else %>
  <p>
    <b><%= t 'Professors' %>:</b> 
    <ul>
    	<% for professor in @lecture.professors %>
    	<li><%= professor.person.name %></li>
    	<% end %>
    </ul>
  </p>
  <% end %>

<h3><%= t 'Discipline' %></h3>
<p>
  <b><%= t 'Code' %>:</b> <%= @lecture.discipline.code %>
</p>
<p>
  <b><%= t 'Name' %>:</b> <%= @lecture.name %>
</p>
<p>
  <b><%= t 'Version' %>:</b> <%= @lecture.discipline.version_fullname %>
</p>
<p>
  <b><%= t 'Course' %>:</b> <%= @lecture.discipline.course.code %>
</p>