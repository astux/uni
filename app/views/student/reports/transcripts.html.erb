<h1><%= t 'Reports' %></h1>
<%= render :partial => 'menu' %>
<article>
  <h2><%= t 'Transcripts' %></h2>
  
  <p>
    <b><%= t 'Course' %>:</b> <%= @curriculum_student.curriculum.course.name %>
  </p>
  <p>
    <b><%= t 'Situation' %>:</b> <%= t 'Active' %>
  </p>
  <p>
    <b><%= t 'EntranceDate' %>:</b> <%= l @curriculum_student.created_at, :format => :long %>
  </p>
  <p>
    <b><%= t 'Curriculum' %>:</b> <%= @curriculum_student.curriculum.name %>
  </p>
  
  <h3><%= t 'Disciplines' %></h3>
  
  <table class="grid">
    <thead>
      <tr>
        <th><%= t 'Discipline' %></th>
        <th><%= t 'Situation' %></th>
        <th><%= t 'AcademicPeriod' %></th>
        <th><%= t 'Grade' %></th>
        <th><%= t 'Absences' %></th>
        <th><%= t 'Credits' %></th>
      </tr>
    </thead>
    <tbody>
    	<% for transcript in @transcripts %>
      <tr>
        <td>
        	<%= transcript[:discipline].name %>
        </td>
        <% if transcript[:lecture_student] &&  %>
        <td>
        	<span class="<%= situation_class transcript[:lecture_student] %>">
        		<%= transcript[:lecture_student].situation_description %>
        	</span>
        </td>
        <td><%= transcript[:lecture_student].lecture.academic_period.name %></td>
        <td><%= transcript[:lecture_student].grade %></td>
        <td><%= transcript[:lecture_student].attendance.to_s + '%' if transcript[:lecture_student].attendance %></td>
        <% else %>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <% end %>
        <td><%= transcript[:discipline].credits %></td>
      </tr>
      <% end %>
  </table>
</article>
