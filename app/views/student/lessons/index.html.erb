<h1><%= @lecture.name %></h1>
<%= render :partial => 'student/lectures/menu' %>
<article>
	<h2><%= t 'Lessons' %></h2>
	
	<% if @lessons %>
	<table>
		<thead>
			<tr>
				<th><%= t 'Title' %></th>
				<th><%= t 'Date' %></th>
			</tr>
		</thead>
		<tbody>
			<% for lesson in @lessons %>
			<tr>
				<td><%= link_to lesson.name, [:student, @lecture, lesson] %></td>
				<td><%= l lesson.date, :format => :long %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	
	<%= will_paginate @lessons %>
	<% end %>
</article>
