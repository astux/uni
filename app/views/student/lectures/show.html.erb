<h1><%= @lecture.name %></h1>
<%= render :partial => 'menu' %>
<article>
  <h2><%= t 'Home' %></h2>
  <p>
    <b><%= t 'ClassCode' %>:</b> <%= @lecture.code %>
  </p>
  <p>
    <b><%= t 'Professor' %>:</b> <%= link_to @lecture.professor.name, user_path(@lecture.professor.person) %>
  </p>
  <% if @lecture.lecture_time_slots.exists? %>
  <p>
    <b><%= t 'TimeTable' %>:</b>
    <ul>
      <% for time_slot in @lecture.lecture_time_slots %>
      <li>
        <%= (t 'date.day_names')[time_slot.weekday] %> 
        <%= time_slot.start_time_string %> - <%= time_slot.end_time_string %>
      </li>
      <% end %>
    </ul>
  </p>
  <% end %>
  
  <% if @updates %>
  <h3><%= t 'Updates' %></h3>
  <ul class="wall">
	  <% for update in @updates %>
	  <% if update.is_a?(Wall) %>
	  <li>
	  	<div class="photo">
	  		<% if update.message.person.photo.exists? %>
	  		<%= image_tag update.message.person.photo.url(:small) %>
	  		<% else %>
	  		<%= image_tag 'no-picture-small.png' %>
	  		<% end %>
	  	</div>
	  	<div class="item">
	  		<p class="title">
	  			<%= link_to update.message.person.name, user_path(update.message.person) %>, 
	  			<%= t 'TimeOn' %> <%= l update.created_at, :format => :long %>:
	  		</p>
	  		<div class="content">
		  		<% if update.message.subject %>
		  		<h4><%= update.message.subject %></h4>
		  		<% end %>
		  		
		  		<%= update.message.content %>
		  	</div>
	  	</div>
	  </li>
	  <% else %>
	  <li class="file">This is supposed to be a file upload update</li>
	  <% end %>
	  <% end %>
	</ul>
  <% end %>
</article>