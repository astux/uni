<p>
  <b><%= t 'Name' %>:</b>
  <%= user.name %>
</p>

<p>
  <b><%= t 'Email' %>:</b>
  <%= user.email %>
</p>

<% if @user.sites.exists? %>
  <h3>Sites</h3>
  <% for site in @user.sites %>
  <p>
    <b><%= site.name %>:</b>
    <%= link_to site.url %>
  </p>
  <% end %>
<% end%>

